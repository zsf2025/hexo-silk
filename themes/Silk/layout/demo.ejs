<!DOCTYPE html>
<html lang="zh-CN">
<%- partial('_partials/head', {
    isPostPage: false,
    hasMarkdown: false
}) %>
<body class="font-inter bg-gray-50 text-dark">
    <!-- 导航栏 -->
    <%- partial('_partials/header', { isPostPage: false }) %>

    <!-- Demo展示区域 -->
    <div class="container mx-auto px-4 py-8" style="margin-top: 100px;">
        <h1 class="text-3xl font-bold mb-8 text-center">案例展示</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% if (theme.demo && theme.demo.enable && theme.demo.items && theme.demo.items.length > 0) { %>
                <% theme.demo.items.forEach(function(item) { %>
                    <a href="<%= item.url %>" class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 m-2 block">
                        <div class="p-6">
                            <h2 class="text-xl font-semibold mb-2"><%= item.title %></h2>
                            <p class="text-gray-600 mb-4"><%= item.description %></p>
                        </div>
                    </a>
                <% }); %>
            <% } else if (theme.demo && theme.demo.enable) { %>
                <!-- 向后兼容：如果配置中没有items数组，则显示单个demo项目 -->
                <a href="<%= theme.demo.url %>" class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300 block">
                    <div class="p-6">
                        <h2 class="text-xl font-semibold mb-2"><%= theme.demo.title %></h2>
                        <p class="text-gray-600 mb-4"><%= theme.demo.description %></p>
                    </div>
                </a>
            <% } %>
        </div>
    </div>
</body>
</html>